<%= form_with(model: task, local: true) do |f| %>
　<% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <%= render 'layouts/flash_messages' %>
      </ul>
    </div>
  <% end %>
              
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>
  
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  
  <%= f.submit '投稿' %>
<% end %>